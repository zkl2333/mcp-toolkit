{
  "name": "@zkl2333/fs-mcp-server",
  "version": "0.2.0",
  "description": "MCP文件系统服务器：提供文件系统操作工具",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-fs-server": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun run build:server && bun run build:types",
    "build:server": "bun build src/index.ts --outfile=dist/index.js --format=cjs --target=node --external=@modelcontextprotocol/sdk",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "bun run src/index.ts",
    "start": "node dist/index.js",
    "test": "bun run build && NODE_ENV=test bun test tests/*.spec.ts --timeout 30000; bun run fix-coverage",
    "test:watch": "NODE_ENV=test bun test tests/*.spec.ts --watch --timeout 30000",
    "fix-coverage": "node ../../scripts/fix-coverage-paths.js fs-server",
    "clean": "rm -rf dist",
    "lint": "echo '暂无linting配置'",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "filesystem",
    "mcp-server",
    "file-operations",
    "typescript"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/bun": "latest",
    "@zkl2333/mcp-test-utils": "workspace:*",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
